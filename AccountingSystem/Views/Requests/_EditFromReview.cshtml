@model AccountingSystem.Models.ViewModels.RequestEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Заявка №@Model.Id</h4>
<hr />
<dl class="row">
        <form asp-action="EditFromReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <dt class = "col-sm-5">
                    @Html.DisplayNameFor(model => model.RequestTypeNavigation)
                </dt>
                <dd class = "col-sm-13">
                    @Html.DisplayFor(model => model.RequestTypeNavigation.Name)
                    </dd>
     @if (Model.PortabilityDate == true)
    {
        <dt class = "col-sm-5">
            <label asp-for="StartDate" class="control-label"></label>
        </dt>
        <dd class = "col-sm-13">
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>  
        </dd>  
            @if (Model.EndDate != DateTime.MinValue)
            {
                <dt class = "col-sm-5">
                    <label asp-for="EndDate" class="control-label"></label>
                </dt>
                <dd class = "col-sm-13">
                    <input asp-for="EndDate" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>  
        </dd>
            }
    }
    else
    {
        <dt class = "col-sm-5">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-13">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
            @if (Model.EndDate != DateTime.MinValue)
            {
                <dt class = "col-sm-5">
                    @Html.DisplayNameFor(model => model.EndDate)
                </dt>
                <dd class = "col-sm-13">
                    @Html.DisplayFor(model => model.EndDate)
        </dd>
            }
    }
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubstituteEmployee" class="control-label"></label>
                <select asp-for="SubstituteEmployee" class="form-control" asp-items="Model.UsersForSubstitute"></select>
                <span asp-validation-for="SubstituteEmployee" class="text-danger"></span>
            </div>

            <div class="modal-user-buttons">
    <input type="submit" value="Сохранить" class="btn btn-success" />
    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Отмена</button>
</div>     
        </form>
</dl>