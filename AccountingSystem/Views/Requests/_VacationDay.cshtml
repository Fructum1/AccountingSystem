@model AccountingSystem.Models.ViewModels.RequestCreateViewModel
@{
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="RequestType" value="1" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PortabilityDate" /> @Html.DisplayNameFor(model => model.PortabilityDate)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SubstituteEmployee" class="control-label"></label>
                <select asp-for="SubstituteEmployee" class="form-control" asp-items="ViewBag.UsersForSubstitute">
                    <option selected="selected" value="">Выберите заменяющего</option>
                </select>
            </div>

            <div class="form-group">
                <label class="control-label">Выберите дату</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Согласующий</label>
                <select name="approverId" class="form-control" asp-items="ViewBag.UsersForApprove"></select>
            </div>
            <div class="modal-user-buttons">
                <input type="submit" value="Создать" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}